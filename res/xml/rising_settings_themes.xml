<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lineage="http://schemas.android.com/apk/res-auto"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/themes_title">

    <PreferenceCategory
        android:key="gen_ui"
        android:layout="@layout/mist_first_header_pref"
        android:title="@string/boot_font">

        <!-- Bootanimation style -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="bootanimation_fragment"
            android:icon="@drawable/ic_movie"
            android:title="@string/boot_animation_styles_title"
            android:summary="@string/boot_animation_styles_summary"
            android:fragment="com.rising.settings.fragments.BootAnimationSettings"
            lineage:position="top" />

        <!-- Font style -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="android.theme.customization.fonts"
            android:icon="@drawable/ic_font"
            android:title="@string/theme_customization_font_title"
            android:summary="@string/theme_customization_font_summary"
            android:fragment="com.rising.settings.fragments.ui.fonts.FontPickerPreview"
            lineage:position="bottom" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/mist_first_header_pref"
        android:title="@string/custom_icons">

        <!-- Icon pack -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="android.theme.customization.icon_pack"
            android:icon="@drawable/ic_drawing"
            lineage:position="top"
            android:title="@string/theme_customization_icon_pack_title"
            android:summary="@string/theme_customization_icon_pack_summary"
            android:fragment="com.rising.settings.fragments.ui.StatusbarIcons"/>

        <!-- Adaptive icon pack -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="android.theme.customization.adaptive_icon_shape"
            android:icon="@drawable/ic_shapes"
            lineage:position="bottom"
            android:title="@string/theme_customization_icon_shape_title"
            android:summary="@string/theme_customization_icon_shape_summary"
            android:fragment="com.rising.settings.fragments.ui.IconShapes"/>

        </PreferenceCategory>

        <PreferenceCategory
        android:layout="@layout/mist_first_header_pref"
        android:title="@string/notification_style">

        <!-- Notification Styles -->      
        <com.android.settings.preferences.SystemSettingListPreference
             android:key="notification_style"
             android:title="@string/notif_style_title"
             android:icon="@drawable/ic_styles_notification"
             android:entries="@array/notif_style_entries"
             android:entryValues="@array/notif_style_values"
             android:summary="%s"
             lineage:position="top"
             android:defaultValue="0" />

        <!-- Brightness Styles -->
        <com.android.settings.preferences.SystemSettingListPreference
             android:key="android.theme.customization.brightness_slider"
             android:title="@string/theme_customization_brightness_slider_title"
             android:summary="@string/theme_customization_brightness_slider_summary"
             android:icon="@drawable/ic_styles_brightness"
             android:fragment="com.rising.settings.fragments.ui.BrightnessSlider"/>

        <!-- Progress Bar Styles -->      
        <com.android.settings.preferences.SystemSettingListPreference
             android:key="progress_bar_style"
             android:title="@string/progress_bar_style_title"
             android:icon="@drawable/ic_styles_progress"
             android:entries="@array/progress_bar_style_entries"
             android:entryValues="@array/progress_bar_style_values"
             android:summary="%s"
              lineage:position="bottom"
             android:defaultValue="0" />

        </PreferenceCategory>

        <PreferenceCategory
        android:layout="@layout/mist_first_header_pref"
        android:title="@string/system_style">

        <!-- Signal icon style -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="android.theme.customization.signal_icon"
            android:icon="@drawable/ic_signal"
            lineage:position="top"
            android:title="@string/theme_customization_signal_icon_title"
            android:summary="@string/theme_customization_signal_icon_summary"
            android:fragment="com.rising.settings.fragments.ui.SignalIcons"/>

        <!-- Volume Styles -->      
        <com.android.settings.preferences.SystemSettingListPreference
             android:key="custom_volume_styles"
             android:title="@string/volume_style_title"
             android:icon="@drawable/ic_settings_sound"
             android:entries="@array/volume_styles_entries"
             android:entryValues="@array/volume_styles_values"
             android:summary="%s"
             android:defaultValue="0" />

        <!-- Wifi icon style -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="android.theme.customization.wifi_icon"
            android:icon="@drawable/ic_wifi"
            android:title="@string/theme_customization_wifi_icon_title"
            android:summary="@string/theme_customization_wifi_icon_summary"
            android:fragment="com.rising.settings.fragments.ui.WifiIcons"
            lineage:position="bottom"/>

    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="others_ui"
        android:layout="@layout/mist_first_header_pref"
        android:title="@string/category_name_ui_others">

        <!-- Wallpaper Settings -->
        <com.android.settings.preferences.ui.AdaptivePreference
            android:key="wallpaper_settings"
            android:icon="@drawable/ic_settings_ui"
            android:title="@string/wallpaper_settings_title"
            android:summary="@string/wallpaper_settings_summary"
            android:fragment="com.rising.settings.fragments.Wallpaper"
            lineage:position="top"/>

        <com.android.settings.preferences.SystemSettingSwitchPreference
            android:key="pie_animation_style"
            android:title="@string/pie_animation_style_title"
            android:summary="@string/pie_animation_style_summary"
            android:defaultValue="false" />

        <!-- Screen Off animation -->
        <com.android.settings.preferences.SystemSettingListPreference
            android:key="screen_off_animation"
            android:icon="@drawable/ic_television_classic"
            android:title="@string/screen_off_animation_title"
            android:dialogTitle="@string/screen_off_animation_title"
            android:entries="@array/screen_off_animation_entries"
            android:entryValues="@array/screen_off_animation_values"
            android:defaultValue="0"
            lineage:position="bottom" />

    </PreferenceCategory>


</PreferenceScreen>
